{
	"name": "karma",
	"displayName": "Karma",
	"description": "A colorful VS Code theme",
	"version": "3.0.0",
	"publisher": "sreetamd",
	"author": "Sreetam Das",
	"license": "MIT",
	"galleryBanner": {
		"color": "#0A0E14",
		"theme": "dark"
	},
	"icon": "images/logo.png",
	"scripts": {
		"start": "tsx watch src/index.ts",
		"dev": "pnpm run start",
		"build": "rimraf ./dist && tsup",
		"prepublishOnly": "npm run build",
		"package": "vsce package",
		"release": "vsce publish"
	},
	"repository": {
		"url": "https://github.com/sreetamdas/karma.git"
	},
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Themes"
	],
	"contributes": {
		"themes": [
			{
				"label": "Karma v3",
				"uiTheme": "vs-dark",
				"path": "./themes/default.json"
			},
			{
				"label": "Karma Light",
				"uiTheme": "vs",
				"path": "./themes/light.json"
			},
			{
				"label": "Karma ",
				"uiTheme": "vs-dark",
				"path": "./themes/Karma-color-theme.json"
			}
		]
	},
	"devDependencies": {
		"@types/chroma-js": "^2.1.4",
		"@types/color": "^3.0.3",
		"@types/node": "^18.7.14",
		"chroma-js": "^2.4.2",
		"color": "^4.2.3",
		"tsup": "^6.2.3",
		"tsx": "^3.9.0",
		"typescript": "^4.8.2",
		"vsce": "^2.11.0"
	},
	"bugs": {
		"url": "https://github.com/sreetamdas/karma/issues"
	},
	"homepage": "https://github.com/sreetamdas/karma#readme",
	"keywords": [
		"Karma",
		"theme",
		"dark",
		"light"
	]
}
